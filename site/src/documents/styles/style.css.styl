// Small Screen
@media screen and (max-width: 960px)
	*
		opacity: 1 !important

	body
		padding-bottom: 4em

	div.container
		margin: 0

	.topbar
		margin-bottom: 1em
		text-align: center
		.heading
		.subheading
			display: block
			margin: 0
			padding: 0

	.sidebar
		width: 100%
		max-width: none
		position: relative
		text-align: center
		line-height: 2em
		li
			display: inline
			margin: 0 0.5em
		.promos
			display: none

	.mainbar
		width: 100%
		position: relative
		padding: 0
		left: 0
		right: 0
		margin-top: 1em

		.contact-links
			line-height: 3em

		.block
			border-radius: 0
			.block-content
				.reference
					.categories
						.category
							column(2)

		.subblock
			.main
				.heading
					h2
						position: static
						display: block

	.bottombar
		padding: 1em 1% 0


// Small Screen
@media screen and (max-width: 480px)
	body
		padding-bottom: 1em

	.mainbar
		.contact-links
			a
				display: block
				margin: 2em 0

		.block
			text-align: justify
			text-justify: newspaper
			.block-content
				.reference
					.categories
						.category
							column(1)

		.subblock
			.avatar
				display: none
			.main
				padding-left: 0 !important

	.bottombar
		.poweredby
		.copyright
			display: block
			float: none
			text-align: center


.social-buttons
.service-badges
	display: block
	margin-top: 0.5em

.service-button
	display: inline-block
	width: 100px
	text-align: left
	overflow: hidden
	&.google-plus-one-button
	&.hacker-news-submit-button
		width: 80px
	&.twitter-follow-button
	&.fury-button
		width: 130px
	&.reddit-submit-button
		width: 140px
		iframe
			padding-top: 3px

table tbody th
	text-align: left

.pin
	fieldset, .errors
		margin-bottom: 2em
	label
		margin-top: 1.5em
	.errors
		color: red
	fieldset
		legend, label, input
			display: block
			width: 100%
		legend
			font-weight: fontMyraidBoldest
			font-size: 120%
		label
			font-weight: fontMyraidBold
		p
			font-style: italic
			font-weight: fontMyraidLight
			margin: 0