/*=========================================
Base
=========================================== */

colorBackgroundBlue = #5badf0
colorBorder = #eee
colorTextDefault = #777
colorTextBlue = #5694f1
colorTextHeading = #222
colorTextSubheading = #aaa

body
	font: 16px/1 "Helvetica Neue", Helvetica, Arial, sans-serif
	color: colorTextDefault
	font-smoothing: antialiased
	text-rendering: optimizeLegibility
	cursor: default

/* Link to Documentation */
a.documentation
	position: fixed
	z-index: 100
	top: 11px
	right: 10px
	padding: 8px 12px

	border: 1px solid colorBorder
	background: #FAFAFA // rgba(238, 238, 238, 0.33)
	color: colorTextSubheading

	font-size: 0.8em
	font-weight: 600
	line-height: 1.4

	border-radius: 3px

.wrapper
	padding: 60px 0 100px
	margin: 0 auto
	text-align: center
	width: 100%
	overflow: hidden

.content
	margin: auto
	text-align: center

.header
	border-bottom: 1px solid colorBorder
	padding-bottom: 2.5em
	text-align: center
	position: relative

.logo
	display: block
	margin: 0 auto 1.3em
	img
		padding-left: 1.5em
		padding-top: 1em
		max-width: 175px
		max-height: 100px

.gallery
	border: 1px solid colorBorder
	border-left: none
	border-right: none
	overflow: scroll
	line-height: 0
	font-size: 0
	text-align: left
	height: 200px
	white-space: nowrap
	a
		cursor: default
	img
		display: inline-block
		height: 200px
		margin: 0
		padding: 0
		border: none

.years
	margin: 3em 0 1em
	a
		// border: 1px solid colorBorder
		// background: rgba(238, 238, 238, 0.33)
		color: colorTextSubheading
		padding: 0.5em 1%
		margin: 0 10%
		&:hover
			color: colorTextBlue !important

@media (max-width: 450px)
	.years
		a
			margin: 0 7%

.header
.facewall
	width: 80%
	margin: 0 auto


/*=========================================
Typography
=========================================== */
/*Accent color*/

a, .link
	text-decoration: none
	color: inherit

p a, p .link
	color: colorTextBlue

a:not(.hover-link), .link
	font-weight: 400
	&:hover
		color: colorTextBlue
		text-decoration: underline

section
	margin: 5em 0em 1em 0em

h1, h2, h3, h4, h5, h6, h7
	font-weight: 400
	font-size: 1.25em
	margin: 1em 0
	color: colorTextHeading

h2, h3, h4, h5, h6, h7
	font-weight: 300

h3
	color: colorTextSubheading
	transition: color 1s ease-out

.avatar
	display: inline-block
	width: 80px
	border-radius: 50%
	margin-bottom: 0.5em
	border: 1px solid white

.item
	display: block
	margin: 2em 0 0.5em 0

	&:hover
		h3
			color: colorTextBlue

	h3
		margin: 0
		&:hover
			text-decoration: underline

.facewall
	a, a:hover
		text-decoration: none
	.avatar
		width: 70px
		margin: 0.5em 0.3em
	.avatar, .avatar:hover
		transition: box-shadow 0.2s ease-out
	.avatar:hover
		box-shadow: 0 0 3px rgba(0,0,0,1)

h3 + p
	line-height: 1.5em
	margin-top: 0.2em

p
	margin: 1em auto
	line-height: 1.8em
	font-size: 1em
	width: 95%

.header
	top: -2em

body
	.past, .today, .future
		display: none

	&.today .today
	&.past .past
	&.future .future
		display: block
		transition: background 5s
		background: white
		&.inline
			display: inline-block

	/*&.today .today:not(.past):not(.future)*/
	&.past .past:not(.today):not(.future)
	&.future .future:not(.past):not(.today)
		background: rgba(0, 0, 0, 0.005)
		border: 2px yellow dashed

	&.today .years a.today-link
	&.past .years a.past-link
	&.future .years a.future-link
		color: colorTextHeading

