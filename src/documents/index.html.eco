<aside class="payment modal" style="display:none">
	<table>
		<tbody>
			<% for own heading,bank of @banks: %>
				<tr style="background:#EEE">
					<th colspan="2"><%= heading %></th>
				</tr>
				<% for own key,value of bank: %>
					<tr>
						<th width="30%"><%= key %></th>
						<td width="70%"><%= value %></th>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</aside>